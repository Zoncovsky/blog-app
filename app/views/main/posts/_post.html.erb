<%= link_to main_post_path(post), class: 'block max-w-sm p-6 bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:hover:bg-gray-700 mb-2 flex' do %>
  <div class="flex-shrink-0 mr-4">
    <% if post.images.present? %>
      <% post.images.each do |image| %>
        <%= image_tag image, class: "object-cover w-full rounded-t-lg h-96 md:h-auto md:w-48 md:rounded" %>
      <% end %>
    <% end %>
  </div>
  <div class="flex flex-col justify-between">
    <div>
      <h5 class="text-2xl font-bold tracking-tight text-gray-900 dark:text-white"><%= post.user&.display_name %></h5>
      <p class="font-normal text-blue-700 dark:text-blue-400">@<%= post.user.nickname %></p>
      <p class="font-normal text-gray-700 dark:text-gray-400"><%= post.note %></p>
    </div>
    <div>
      <% if post.may_make_published? %>
        <%= button_to 'Publish', post_published_main_post_path(post), method: :put, class: 'underline' %>
      <% end %>
    </div>
  </div>
<% end %>
