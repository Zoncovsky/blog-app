<div class="flex justify-center px-4 mx-auto max-w-screen-xl mb-10 mt-2">
  <div class="max-w-sm bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700 text-center">
    <%= render 'shared/page_heading', model: @post %>
    <hr>
    <div class="py-4 px-10 mx-auto">
      <% @post.images.each do |image| %>
        <%= image_tag image, class: "w-auto h-70" %>
      <% end %>
    </div>
    <div class="py-4 px-4 mx-auto">
      <h2 class="mb-2 text-xl font-semibold leading-none text-gray-900 md:text-2xl dark:text-white"><%= @post.user&.display_name %></h2>
      <dl>
        <dd class="mb-4 font-light text-gray-500 sm:mb-5 dark:text-gray-400"><%= @post.note %></dd>
      </dl>
      <dl>
        <div>
          <dt class="mb-2 font-semibold leading-none text-gray-900 dark:text-white">Status:</dt>
          <dd class="bg-green-100 text-green-800 text-xs font-medium me-2 px-2.5 py-0.5 rounded-full dark:bg-green-900 dark:text-green-300">
            <%= @post.status %>
          </dd>
          <dd class="mb-4 font-light text-gray-500 sm:mb-5 dark:text-gray-400"><%= render partial: 'shared/status_actions', locals: { post: @post, namespace: params[:controller].split('/').first } %></dd>
        </div>
      </dl>
      <dl>
        <div>
          <dt class="mb-2 font-semibold leading-none text-gray-900 dark:text-white">User:</dt>
          <dd class="mb-4 font-light text-gray-500 sm:mb-5 dark:text-gray-400"><%= @post.user.id %></dd>
        </div>
      </dl>
      <div class="flex items-center space-x-6">
        <%= link_to edit_system_post_path(@post), class: 'text-white inline-flex items-center bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800' do %>
          <svg aria-hidden="true" class="mr-1 -ml-1 w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path d="M17.414 2.586a2 2 0 00-2.828 0L7 10.172V13h2.828l7.586-7.586a2 2 0 000-2.828z"></path><path fill-rule="evenodd" d="M2 6a2 2 0 012-2h4a1 1 0 010 2H4v10h10v-4a1 1 0 112 0v4a2 2 0 01-2 2H4a2 2 0 01-2-2V6z" clip-rule="evenodd"></path></svg>
          Edit
        <% end %>
        <%= button_to system_post_path(@post), method: :delete, data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}, class: 'inline-flex items-center text-white bg-red-600 hover:bg-red-700 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-red-500 dark:hover:bg-red-600 dark:focus:ring-red-900' do %>
          <svg aria-hidden="true" class="w-5 h-5 mr-1.5 -ml-1" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd"></path></svg>
          Delete
        <% end %>
      </div>
    </div>
  </div>
</div>
